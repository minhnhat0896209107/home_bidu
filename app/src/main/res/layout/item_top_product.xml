<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="4dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivTopProduct"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_marginTop="5.5dp"
            android:layout_marginStart="120dp"
            android:src="@drawable/bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTopProductCount"
            android:layout_width="13dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:layout_marginTop="123dp"
            android:background="@drawable/background_black_retange"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>
    <TextView
        android:textColor="@color/nameProduct"
        android:fontFamily="@font/lexend_regular"
        android:id="@+id/tvNameProduct"
        android:textSize="12sp"
        android:layout_marginTop="5.75dp"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/nameProduct"
        android:layout_marginTop="5dp"
        android:id="@+id/tvPriceProduct"
        android:fontFamily="@font/lexend_semibold"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvSold"
        android:textColor="@color/seller"
        android:textSize="10sp"
        android:text="@string/selled"
        android:fontFamily="@font/lexend_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>