<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivSuggestProduct"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_marginTop="5.5dp"
            android:layout_marginStart="80dp"
            android:src="@drawable/bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginStart="18dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvNameSuggestProduct"
            android:textSize="12sp"
            android:maxLines="2"
            android:fontFamily="@font/lexend_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/tvPriceSuggestProduct"
            android:fontFamily="@font/lexend_semibold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/location"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvCountrySuggest"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:fontFamily="@font/lexend_regular"
                android:layout_marginStart="3.46dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvSoldSuggest"
            android:layout_marginTop="20dp"
            android:textSize="10sp"
            android:text="@string/selled"
            android:fontFamily="@font/lexend_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>