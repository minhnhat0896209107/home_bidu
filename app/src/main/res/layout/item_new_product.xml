<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="4dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivNewProduct"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_marginTop="5.5dp"
            android:layout_marginStart="120dp"
            android:src="@drawable/bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:textColor="@color/nameProduct"
        android:fontFamily="@font/lexend_regular"
        android:id="@+id/tvNameNewProduct"
        android:textSize="12sp"
        android:layout_marginTop="5.75dp"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/nameProduct"
        android:id="@+id/tvPriceNewProduct"
        android:fontFamily="@font/lexend_semibold"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/location"
            android:layout_width="7.08dp"
            android:layout_height="8.33dp"/>
        <TextView
            android:textColor="@color/nameProduct"
            android:id="@+id/tvCountry"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:fontFamily="@font/lexend_regular"
            android:layout_marginStart="3.75dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textSize="10sp"
        android:text="@string/selled"
        android:layout_marginTop="4dp"
        android:textColor="@color/seller"
        android:fontFamily="@font/lexend_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>